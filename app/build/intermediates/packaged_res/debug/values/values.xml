<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="bottom_navigation_color">#6F6F6F</color>
    <color name="colorAccent">#c75f00</color>
    <color name="colorPrimary">#BFFBFF</color>
    <color name="colorPrimaryDark">#5CEFF8</color>
    <color name="ic_launcher_background">#000000</color>
    <color name="pressedColor">#5CEFF8</color>
    <color name="selectedColor">#5CEFF8</color>
    <color name="selectedTextColor">#6F6F6F</color>
    <color name="titleTextColor">#6F6F6F</color>
    <color name="topWhite">#FFFFFF</color>
    <color name="unselectedColor">#BFFBFF</color>
    <color name="unselectedTextColor">#6F6F6F</color>
    <string name="app_name">Sleep Guardian</string>
    <string name="hello_blank_fragment">Hello blank fragment</string>
    <string name="plus_button_description">Description for plus button</string>
    <string name="volume_percentage">アラーム音量: %d%%</string>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="actionMenuTextColor">@color/titleTextColor</item>

    <item name="actionOverflowButtonStyle">@style/Threedotcolor</item>
  </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_background</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/titleTextColor</item>
  </style>
    <style name="Threedotcolor" parent="Widget.AppCompat.Light.ActionButton.Overflow">
    <item name="tint">#6F6F6F</item>
  </style>
    <style name="ToggleSelected">
    <item name="android:background">@color/selectedColor</item>
    <item name="android:textColor">@color/selectedTextColor</item>
  </style>
    <style name="ToggleUnselected">
    <item name="android:background">@color/unselectedColor</item>
    <item name="android:textColor">@color/unselectedTextColor</item>
  </style>
</resources>